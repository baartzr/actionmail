import 'package:flutter/material.dart';
import 'package:domail/app/theme/actionmail_theme.dart';

/// Reusable dropdown widget with consistent styling
class AppDropdown<T> extends StatelessWidget {
  final T? value;
  final List<T> items;
  final String Function(T) itemBuilder;
  final void Function(T?) onChanged;
  final String? hint;
  final bool isDense;
  final Color? textColor;

  const AppDropdown({
    super.key,
    required this.value,
    required this.items,
    required this.itemBuilder,
    required this.onChanged,
    this.hint,
    this.isDense = false,
    this.textColor,
  });

  @override
  Widget build(BuildContext context) {
    final theme = Theme.of(context);
    final cs = theme.colorScheme;
    
    // Use provided textColor or default gray color for dropdown text
    final selectedTextColor = textColor ?? cs.onSurface.withValues(alpha: 0.8);
    
    // Build the button that looks like a dropdown
    Widget buttonChild;
    if (value != null) {
      buttonChild = Row(
        mainAxisSize: MainAxisSize.min,
        children: [
          Text(
            itemBuilder(value as T),
            style: TextStyle(color: selectedTextColor, fontSize: 12),
          ),
          Icon(Icons.arrow_drop_down, color: selectedTextColor, size: 24),
        ],
      );
    } else if (hint != null) {
      buttonChild = Row(
        mainAxisSize: MainAxisSize.min,
        children: [
          Text(
            hint!,
            style: TextStyle(color: selectedTextColor, fontSize: 12, fontWeight: FontWeight.bold,),
          ),
          Icon(Icons.arrow_drop_down, color: selectedTextColor, size: 24),
        ],
      );
    } else {
      buttonChild = Icon(Icons.arrow_drop_down, color: selectedTextColor, size: 24);
    }
    
    return PopupMenuButton<T>(
      itemBuilder: (context) {
        return items.map((item) {
          final isSelected = item == value;
          return PopupMenuItem<T>(
            value: item,
            child: Container(
              width: double.infinity,
              padding: const EdgeInsets.symmetric(vertical: 8, horizontal: 16),
              decoration: BoxDecoration(
                color: isSelected ? ActionMailTheme.alertColor : Colors.transparent,
              ),
              child: Text(
                itemBuilder(item),
                style: TextStyle(color: cs.onSurface, fontSize: 12),
              ),
            ),
          );
        }).toList();
      },
      onSelected: (T? selectedValue) {
        onChanged(selectedValue);
      },
      shape: RoundedRectangleBorder(
        borderRadius: BorderRadius.circular(2),
      ),
      color: cs.surface,
      constraints: const BoxConstraints(maxHeight: 300),
      child: buttonChild,
    );
  }
}

